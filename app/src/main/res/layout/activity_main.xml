<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/curr_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="#ffffff"
        android:gravity="right"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="352dp"
        android:layout_height="268dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curr_num"
        app:layout_constraintVertical_bias="0.317">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buton_1"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:onClick="onClickDigit"
                android:text="1"
                android:textSize="35sp" />

            <Button
                android:id="@+id/buton_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickDigit"
                android:text="2"
                android:textSize="35sp" />

            <Button
                android:id="@+id/buton_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickDigit"
                android:text="3"
                android:textSize="35sp" />

            <Button
                android:id="@+id/buton_mult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickOperator"
                android:text="*"
                android:textSize="35sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buton_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickDigit"
                android:text="4"
                android:textSize="35sp" />

            <Button
                android:id="@+id/buton_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickDigit"
                android:text="5"
                android:textSize="35sp" />

            <Button
                android:id="@+id/buton_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickDigit"
                android:text="6"
                android:textSize="35sp" />

            <Button
                android:id="@+id/buton_minus"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:onClick="onClickOperator"
                android:text="-"
                android:textSize="35sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buton_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickDigit"
                android:text="7"
                android:textSize="35sp" />

            <Button
                android:id="@+id/buton_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickDigit"
                android:text="8"
                android:textSize="35sp" />

            <Button
                android:id="@+id/buton_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickDigit"
                android:text="9"
                android:textSize="35sp" />

            <Button
                android:id="@+id/buton_plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="onClickOperator"
                android:text="+"
                android:textSize="35sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buton_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickDot"
                android:text="."
                android:textSize="35sp" />

            <Button
                android:id="@+id/buton_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickDigit"
                android:text="0"
                android:textSize="35sp" />

            <Button
                android:id="@+id/buton_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickOperator"
                android:text="/"
                android:textSize="35sp" />

            <Button
                android:id="@+id/buton_equals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickEquals"
                android:text="="
                android:textSize="35sp" />

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>